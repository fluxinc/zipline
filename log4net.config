<?xml version="1.0" encoding="utf-8" ?>
<configuration>
<log4net>
    <appender name="WardenLog" type="log4net.Appender.FileAppender">
        <file value="warden.log" />
        <appendToFile value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date %level %message%newline" />
        </layout>
    </appender>
    <appender name="UpdateLog" type="log4net.Appender.FileAppender">
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <file value="update.log" />
        <appendToFile value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date %level %message%newline" />
        </layout>
    </appender>

    <root>
        <level value="ALL" />
        <appender-ref ref="WardenLog" />
        <appender-ref ref="UpdateLog" />
    </root>
</log4net>

</configuration>